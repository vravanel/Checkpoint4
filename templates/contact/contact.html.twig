{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <main>
            <div class="py-5 text-center">
                <h1 class="text-secondary">Contactez moi</h1>
                <p class="text-white">Si vous avez une question ou besoin d'informations supplémentaires n'hésitez pas à laisser votre message.</p>
            </div>
            {{ form_start(form) }}
                <div class="col-md-7 col-lg-8">
                    <h2 class="mb-3 text-white">Renseignez vos informations</h2>
                        <div class="row g-3">
                            <div class="col-sm-6">
                                <label class="form-label text-white">Prénom</label>
                                {{ form_widget(form.firstname) }}
                            </div>
                            <div class="col-sm-6">
                                <label class="form-label text-white">Nom</label>
                                {{ form_widget(form.lastname) }}
                            </div>

                            <div class="col-12">
                                <label class="form-label text-white">Email</label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text">@</span>
                                    {{ form_widget(form.email) }}
                                </div>
                            </div>

                            <div class="col-12">
                                <label class="form-label text-white">Message</label>
                                <div class="input-group has-validation">
                                {{ form_widget(form.message) }}
                                </div>
                            </div>
                            <hr class="my-3">

                            <button class="w-100 btn btn-secondary btn-lg text-primary" type="submit">Envoyer votre message</button>

            </div>
            {{ form_end(form) }}
        </main>
    </div>

{% endblock %}