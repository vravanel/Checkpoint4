{% extends 'admin/base.html.twig' %}

{% block title %}Admin Contact{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-white text-center mt-5 mb-4">Les messages</h1>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Email</th>
                <th>Message</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr class="position-relative">
                <td>{{ contact.firstname }}</td>
                <td>{{ contact.lastname }}</td>
                <td>{{ contact.email }}</td>
                <td>{{ contact.message }}</td>
                <td>
                    <a class="btn btn-secondary stretched-link" href="{{ path('app_admin_contact_show', {'id': contact.id}) }}">Voir</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun message trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
