{% extends 'admin/base.html.twig' %}

{% block title %}Admin Rendez-vous{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-white text-center mt-5 mb-4">Gestion des rendez vous</h1>
    <div class="mt-2 mb-3 btn btn-secondary">
        <a class="text-decoration-none text-primary" href="{{ path('app_admin_appointment_new') }}">Ajouter un nouveau rendez-vous</a>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Date</th>
                <th>Nombre de places</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for appointment in appointments %}
            <tr class="position-relative">
                <td>{{ appointment.date ? appointment.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ appointment.nbUser }}</td>
                <td>
                    <a class="btn btn-secondary stretched-link" href="{{ path('app_admin_appointment_edit', {'id': appointment.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun rendez-vous trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="d-flex justify-content-center">
        {{ knp_pagination_render(appointments) }}
    </div>
</div>
{% endblock %}
