{% extends 'admin/base.html.twig' %}

{% block title %}Horse index{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-white text-center mt-5 mb-4">Gestion des chevaux</h1>
    <div class="mt-2 mb-3 btn btn-secondary">
        <a class="text-decoration-none text-primary" href="{{ path('app_admin_horse_new') }}">Ajouter un nouveau cheval</a>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Race</th>
                <th>Personnalité</th>
                <th>Compétences</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for horse in horses %}
            <tr class="position-relative">
                <td>{{ horse.name }}</td>
                <td>{{ horse.breed }}</td>
                <td>{{ horse.personality }}</td>
                <td>{{ horse.skill }}</td>
                <td>{{ horse.image }}</td>
                <td>
                    <a class="btn btn-secondary stretched-link" href="{{ path('app_admin_horse_edit', {'id': horse.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun cheval trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="d-flex justify-content-center">
        {{ knp_pagination_render(horses) }}
    </div>
</div>
{% endblock %}
