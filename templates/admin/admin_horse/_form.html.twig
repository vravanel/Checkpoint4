<div class="row justify-content-center">
    <div class="col-md-9">
        {{ form_start(form) }}

        <div class="form-group d-grid col-6 mx-auto text-white mt-3">
            {{ form_label(form.name, 'Nom du cheval') }}
            {{ form_widget(form.name) }}
        </div>
        <div class="form-group d-grid col-6 mx-auto text-white mt-3">
            {{ form_label(form.breed, 'Nom de la race') }}
            {{ form_widget(form.breed) }}
        </div>
        <div class="form-group d-grid col-6 mx-auto text-white mt-3">
            {{ form_label(form.personality, 'Décrire la personnalité en 3 mots') }}
            {{ form_widget(form.personality) }}
        </div>
        <div class="form-group d-grid col-6 mx-auto text-white mt-3">
            {{ form_label(form.skill, 'Décrire la compétences en quelques lignes du cheval') }}
            {{ form_widget(form.skill) }}
        </div>
        <div class="form-group d-grid col-6 mx-auto text-white mt-3">
            {{ form_label(form.posterFile, 'Ajouter une image du cheval') }}
            {{ form_widget(form.posterFile) }}
        </div>

        <div class="form-group d-grid col-6 mx-auto mt-3 ">
            <button class="btn btn-secondary">{{ button_label|default('Sauvegarder') }}</button>
        </div>
        {{ form_end(form) }}
    </div>
</div>
