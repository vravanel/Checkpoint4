{% extends 'user/base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container ">
        <div class="py-5 text-center">
            <h1 class="text-secondary">Vos informations personnelles</h1>
        </div>
        <div class="d-flex justify-content-center">
         <div class="col-md-7 col-lg-9 ">
                {{ form_start(form) }}
            <div class="row g-3 ">
                <div class="col-sm-6 ">
                    <label class="form-label text-white">Prénom</label>
                    {{ form_widget(form.firstname) }}
                </div>
                <div class="col-sm-6">
                    <label class="form-label text-white">Nom</label>
                    {{ form_widget(form.lastname) }}
                </div>
                <div class="col-sm-6 ">
                    <label class="form-label text-white">Email</label>
                    {{ form_widget(form.email) }}
                </div>
                <div class="col-sm-6 ">
                    <label class="form-label text-white">Téléphone</label>
                    {{ form_widget(form.phone) }}
                </div>
                <div class="col-12">
                    <label class="form-label text-white">Adresse</label>
                    {{ form_widget(form.adress) }}
                </div>
                <div class="col-sm-6 ">
                    <label class="form-label text-white">Ville</label>
                    {{ form_widget(form.city) }}
                </div>
                <div class="col-sm-6 ">
                    <label class="form-label text-white">Code Postal</label>
                    {{ form_widget(form.cityCode) }}
                </div>
                <div class="col-sm-12 d-flex justify-content-center mt-4">
                    <button type="submit" class="btn btn-secondary text-primary">Enregistrer les changements</button>
                </div>
                {{ form_end(form) }}
            </div>
          </div>
    </div>
    </div>
{% endblock %}
