{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row mt-5 justify-content-center">
        <div class="col-md-6">
            <h1 class="text-secondary text-center">Inscription</h1>

                {{ form_errors(registrationForm) }}

                {{ form_start(registrationForm) }}
            <div class="form-group d-grid col-6 mx-auto text-white mt-3">
                {{ form_row(registrationForm.firstname) }}
            </div>
            <div class="form-group d-grid col-6 mx-auto text-white  mt-3">
                {{ form_row(registrationForm.lastname) }}
            </div>
            <div class="form-group d-grid col-6 mx-auto text-white  mt-3">
                    {{ form_row(registrationForm.email) }}
            </div>
            <div class="form-group d-grid col-6 mx-auto text-white mt-3">
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Mot de passe*'
                    }) }}
            </div>
            <div class="form-group d-grid col-6 mx-auto text-white  mt-3">
                {{ form_row(registrationForm.phone) }}
            </div>
            <div class="form-group d-grid col-6 mx-auto text-white  mt-3">
                {{ form_row(registrationForm.adress) }}
            </div>
            <div class="form-group d-grid col-6 mx-auto text-white  mt-3">
                {{ form_row(registrationForm.city) }}
            </div>
            <div class="form-group d-grid col-6 mx-auto text-white  mt-3">
                {{ form_row(registrationForm.cityCode) }}
            </div>
            <div class="form-group d-grid col-6 mx-auto text-white  mt-3">
            {{ form_row(registrationForm.agreeTerms) }}
            </div>
            <div class="form-group d-grid col-6 mx-auto mt-3 ">
                    <button type="submit" class="btn btn-secondary text-primary">S'enregistrer</button>
            </div>
                {{ form_end(registrationForm) }}
        </div>
    </div>
</div>
{% endblock %}
